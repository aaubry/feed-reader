<div class="article" id="article">
	<div class="actions">
		<form method="post" action="/unread">
			<input type="hidden" name="id" value="<%= item.id %>" />
			<input type="hidden" name="feedId" value="<%= item.feedId %>" />
			<button type="submit">Unread</button>
		</form>
		<a href="/<%= category.id %>">Back</a>
	</div>
		
	<h1><%- title %></h1>
	<h2><a href="<%= item.link %>"><%= item.pubDate %></a></h2>
	<hr />
	<%- item.body %>

	<hr />
	
	<div class="actions">
		<form method="post" action="/unread">
			<input type="hidden" name="id" value="<%= item.id %>" />
			<input type="hidden" name="feedId" value="<%= item.feedId %>" />
			<button type="submit">Unread</button>
		</form>
		<a href="/<%= category.id %>" id="btBack">Back</a>
		<form method="post" action="/share">
			<input type="hidden" name="id" value="<%= item.id %>" />
			<input type="text" name="email" placeholder="someone@gmail.com" /><button type="submit">Share</button>
		</form>
	</div>

	<% if(item.links != null && item.links.length != 0) { %>
		<ul class="links">
			<% item.links.forEach(function(i) { %>
				<li>
					<a href="<%- i.link %>"><%- i.title %></a>
				</li>
			<% }); %>
		</ul>
	<% } %>
	
</div>
