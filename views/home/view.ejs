<div class="article">
	<div class="actions">
		<a href="/<%= category.id %>">Back</a>

		<form method="post" action="/unread">
			<input type="hidden" name="id" value="<%= item.id %>" />
			<input type="hidden" name="feedId" value="<%= item.feedId %>" />
			<button type="submit">Unread</button>
		</form>
	</div>
		
	<h1><%- title %></h1>
	<h2><a href="<%= item.link %>"><%= item.pubDate %></a></h2>
	<hr />
	<%- item.body %>
	<% if(item.links != null && item.links.length != 0) { %>
		<ul class="links">
			<% item.links.forEach(function(i) { %>
				<li>
					<a href="<%- i.link %>"><%- i.title %></a>
				</li>
			<% }); %>
		</ul>
	<% } %>
</div>
