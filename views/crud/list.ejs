<% var fieldCount = 0; %>
<h1><%= title %></h1>
<a href="<%= path %>/create">Create</a>
<table>
	<thead>
		<tr>
			<th></th>
			<% for(var name in form.fields) {
				var field = form.fields[name];
				if(field.widget.type != "textarea") {
					++fieldCount; %>
					<th><%= field.labelText(field.name) %></th>
			<% 	}}%>
		</tr>
	</thead>
	<tbody>
		<% for(var i = 0; i < items.length; ++i) {
			var item = items[i]; %>
			<tr>
				<td>
					<a href="<%= path %>/<%= item._id %>">Edit</a>
				</td>
				<% for(var name in form.fields) {
					var field = form.fields[name];
					if(field.widget.type != "textarea") { %>
						<td><%= item[name] %></td>
				<% }} %>
			</tr>
		<% } %>
	</tbody>
	<tfoot>
		<tr>
			<td colspan="<%= fieldCount + 1 %>">
				<% for(var i = 1; i <= pages.total; ++i) { %>
					<a href="?page=<%= i %>"><%= i %></a>
				<% } %>
			</td>
		</tr>
	</tfoot>
</table>

